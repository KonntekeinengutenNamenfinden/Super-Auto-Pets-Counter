<Application x:Class="SAPCounter.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SAPCounter"
             StartupUri="MainWindow.xaml">
    <Application.Resources>

        <ImageSource x:Key="BackgroundImageSource">Media/Pictures/Background.jpg</ImageSource>
        <ImageBrush x:Key="BackgroundImage" ImageSource="{DynamicResource BackgroundImageSource}"/>

    </Application.Resources>
</Application>
